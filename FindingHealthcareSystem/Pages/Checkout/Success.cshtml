@page "/checkout/success"
@model FindingHealthcareSystem.Pages.Checkout.SuccessModel
@{
}
<link rel="stylesheet" href="~/css/Checkout.css"></link>
<div class="container">
    <div class="success-container">
        <span class="badge-appointment">Đặt lịch khám</span>

        <div class="success-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
        </div>

        <h1 class="success-title">Đặt lịch thành công!</h1>
        <p class="success-message">
            Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi. Thông tin đặt lịch khám của bạn đã được gửi cho cơ sở y tế.
        </p>

        
    </div>
