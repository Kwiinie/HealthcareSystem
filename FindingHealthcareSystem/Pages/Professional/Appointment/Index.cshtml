@page "/professional/appointment"
@model FindingHealthcareSystem.Pages.Professional.Appointment.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";

}
<link href="~/css/professional.css" rel="stylesheet" />
<div class="main-content container mt-10">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                            <i class="bi bi-calendar-date text-success fs-3"></i>
                        </div>
                        <div>
                            <h6 class="card-title text-muted mb-1">Lịch hẹn hôm nay</h6>
                            <h2 class="mb-0" id="totalMyAppointment">@Model.TotalMyAppointment</h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                            <i class="bi bi-people text-primary fs-3"></i>
                        </div>
                        <div>
                            <h6 class="card-title text-muted mb-1">Tổng bệnh nhân</h6>
                            <h2 class="mb-0" id="totalPatient">@Model.TotalPatient</h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                            <i class="bi bi-clock-history text-warning fs-3"></i>
                        </div>
                        <div>
                            <h6 class="card-title text-muted mb-1">Đang chờ</h6>
                            <h2 class="mb-0" id="totalWaitAppointment">@Model.TotalWaitAppointment</h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-info bg-opacity-10 p-3 me-3">
                            <i class="bi bi-check-circle text-info fs-3"></i>
                        </div>
                        <div>
                            <h6 class="card-title text-muted mb-1">Hoàn thành</h6>
                            <h2 class="mb-0" id="totalCompleteAppointment">@Model.TotalCompleteAppointment</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="patientAppointments">
            @await Html.PartialAsync("_PatientAppointments", Model)
        </div>

        <div id="patientRecords">
            @await Html.PartialAsync("_PatientRecords", Model)
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/indexprofessional.js"></script>